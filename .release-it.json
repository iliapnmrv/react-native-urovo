{
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}",
    "requireBranch": "main"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
